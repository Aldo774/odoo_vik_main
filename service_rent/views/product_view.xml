<openerp>
    <data>


        <record id="view_product_form_inherit_service_type" model="ir.ui.view">
            <field name="name">product.template.service.type.form.inherit</field>
            <field name="model">product.template</field>
            <field name="inherit_id" ref="product.product_template_form_view"/>
            <field name="arch" type="xml">
                <div name="options" position="after">
                    <group>
                        <field name="service_type" attrs="{'invisible': [('type', 'not in', ['product'])]}"/>
                    </group>
                </div>
                 <xpath expr="//page[@name='sales']" position="after">
                     <page string="Rent" attrs="{'invisible':[('service_type','!=','rent')]}" name="rent">
                                <group name="Rent">
                                    <group name="rent_condition" string="Rent Conditions">
                                        <label for="service_factor"/>
                                        <div>
                                            <field name="service_factor" class="oe_inline"/> K*
                                        </div>
                                    </group>
                                </group>
                     </page>
                 </xpath>


            </field>
        </record>


        <record id="view_product_tree_inherit_service_type" model="ir.ui.view">

            <field name="model">product.template</field>
            <field name="inherit_id" ref="product.product_template_tree_view"/>
            <field name="arch" type="xml">

                <xpath expr="//field[@name='name']" position="after">
                    <field name="service_type" string="Service Type"/>
                </xpath>

            </field>
        </record>



    </data>
</openerp>
